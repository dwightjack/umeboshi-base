{
  "name": "{{name}}",
  "description": "{{description}}",
  "version": "0.0.1",
  "license": "MIT",
{{#if author}}
  "author": {
    "name": "{{author}}"
  },
{{/if}}
  "contributors": [],
  "main": "app/assets/js/app.js",
  "engines": {
    "node": ">=6.9.0"
  },
  "scripts": {
    {{!-- SCRIPTS --}}
    "start": "npm run clean && npm run modernizr && node ./scripts/webpack-server.js",
    "server": "node ./scripts/server.js",
    "test": "cross-env BABEL_ENV=test jest --config ./config/jest.config.json",
    "webpack": "webpack --config ./config/webpack.conf.js --color --hide-modules",
    "webpack:production": "cross-env NODE_ENV=production npm run webpack",
    "modernizr": "node ./scripts/modernizr",
    "modernizr:production": "cross-env NODE_ENV=production npm run modernizr",
    "clean": "rimraf ./public/*",
    "build": "npm run clean && npm run lint && npm run modernizr && npm run webpack",
    "build:production": "cross-env NODE_ENV=production npm run build",
    "eslint": "eslint -c ./app/assets/js/.eslintrc.json \"./app/assets/js/**/*.js\"",
    "stylelint": "stylelint \"./app/assets/**/*.scss\" --config .stylelintrc.json",
    "lint": "npm run eslint && npm run stylelint"
  },
  "dependencies": {
    {{!-- DEPENDENCIES --}}
    "babel-polyfill": "6.23.0",
    "babel-runtime": "6.25.0",
    "normalize.css": "7.0.0",
    "sass-mq": "3.3.2"
  },
  "devDependencies": {
    {{!-- DEV_DEPENDENCIES --}}
    "autoprefixer": "7.1.2",
    "babel-core": "6.25.0",
    "babel-eslint": "7.2.3",
    "babel-jest": "20.0.3",
    "babel-loader": "7.1.1",
    "babel-plugin-add-module-exports": "0.2.1",
    "babel-plugin-transform-runtime": "6.23.0",
    "babel-preset-env": "1.6.0",
    "babel-preset-stage-2": "6.24.1",
    "body-parser": "1.17.2",
    "connect-history-api-fallback": "1.3.0",
    "cross-env": "5.0.3",
    "css-loader": "0.28.4",
    "customizr": "https://github.com/doctyper/customizr/tarball/develop",
    "eslint": "4.3.0",
    "eslint-config-airbnb-base": "11.3.1",
    "eslint-import-resolver-webpack": "0.8.3",
    "eslint-plugin-import": "2.7.0",
    "eventsource-polyfill": "0.9.6",
    "express": "4.15.3",
    "extract-text-webpack-plugin": "3.0.0",
    "file-loader": "0.11.2",
    "glob": "7.1.2",
    "html-webpack-plugin": "2.30.1",
    "identity-obj-proxy": "3.0.0",
    "ip": "1.1.5",
    "jest": "20.0.4",
    "jsdom": "11.1.0",
    "json-loader": "0.5.7",
    "lodash.get": "4.4.2",
    "mkdirp": "0.5.1",
    "modernizr": "3.5.0",
    "node-sass": "4.5.3",
    "postcss-loader": "2.0.6",
    "raw-loader": "0.5.1",
    "resolve-url-loader": "2.1.0",
    "rimraf": "2.6.1",
    "sass-loader": "6.0.6",
    "script-ext-html-webpack-plugin": "1.8.5",
    "style-loader": "0.18.2",
    "stylelint": "8.0.0",
    "stylelint-config-standard": "17.0.0",
    "stylelint-order": "0.6.0",
    "stylelint-scss": "2.0.0",
    "webpack": "3.4.1",
    "webpack-dev-server": "2.6.1",
    "webpack-merge": "4.1.0"
  }
}
